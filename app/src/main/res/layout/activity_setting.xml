<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/setting_back"
            android:layout_width="23dp"
            android:layout_height="match_parent"
            android:contentDescription="backBtn"
            android:rotation="180"
            android:src="@drawable/icon_arrow_right" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginEnd="23dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/setting_title"
            android:textColor="@color/black"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/round_gray"
        android:orientation="vertical"
        android:padding="19dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/setting_profile"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/setting_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="navi@gmail.com"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/setting_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="10dp"
        android:text="@string/setting_logout"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/round_gray"
        android:orientation="vertical"
        android:padding="19dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/setting_info"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/round_gray"
        android:orientation="vertical"
        android:padding="19dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/setting_version"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/setting_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="v.0.0.1"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/setting_our"
            android:textColor="@color/black"
            android:layout_marginTop="24dp"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BE강현우 FE김미승 BE김지은 FE홍지우"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/setting_withdrawal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="10dp"
        android:text="@string/setting_withdrawal"
        android:textColor="@color/black"
        android:textSize="14sp" />
</LinearLayout>